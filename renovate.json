{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>berquerant/renovate-config"
  ],
  "ignorePaths": [
    "tests/**"
  ],
  "github-actions": {
    "enabled": false
  },
  "platformAutomerge": true,
  "baseBranches": [
    "main"
  ],
  "packageRules": [
    {
      "addLabels": [
        "docker"
      ],
      "matchDatasources": [
        "docker"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "ARG K8S_OBJECT_DIFF_GO_VERSION=(?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "berquerant/k8s-object-diff-go",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ]
}
